                       actionButton("deleterow", "üóëÔ∏è Delete Row", class = "btn btn-warning"),
                       actionButton("undoBtn", "‚Ü©Ô∏è Undo", class = "btn btn-dark"),
                       actionButton("redoBtn", "üîÅ Redo", class = "btn btn-dark")
                   ),
                   br(), br(),
                   div(style = "text-align: right;",
                       downloadButton("downloadData", "üì• Download Transactions")
                   ),
                   br(), br()
                 )
               ),
               mainPanel(
                 DTOutput("data_table"), 
                 br(),
                 div(style = "text-align: right;",
                     actionButton("clearhistory", "üßπ Clear History", class = "btn btn-danger")
                 )
               )
             )
    ),
    
    # TAB 2: RECORDS OF SALES
    tabPanel("üõí Records of Sales", value = "sales_tab",
             sidebarLayout(
               sidebarPanel(
                 conditionalPanel(
                   condition = "input.main_tabs == 'sales_tab'",
                   selectInput("product_category", "Product Category:", 
                               choices = c("A. Canned Goods", 
                                           "B. Noodles", 
                                           "C. Snacks / Biscuits", 
                                           "D. Drinks / Beverages", 
