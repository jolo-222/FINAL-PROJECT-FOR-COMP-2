    }
    
    plot_ly(weekly_data, labels = ~Category, values = ~Total_Profit, type = "pie",
            marker = list(colors = colorRampPalette(c("#4287f5", "#42f5a7"))(nrow(weekly_data)))) %>%
      layout(title = "")
  })
  
  # Weekly Profit Table
  output$weekly_profit_table <- renderTable({
    req(sales_data())
    today <- Sys.Date()
    week_start <- today - wday(today) + 1
    
