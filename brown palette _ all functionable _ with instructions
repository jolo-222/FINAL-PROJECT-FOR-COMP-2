# UI
ui <- page_fluid(
  useShinyjs(),
  tags$head(tags$style(custom_css)),
  
  div(class = "main-title", "üõí Elegant Store Sales Tracker"),
  
  layout_columns(
    col_widths = c(8, 4),
    
    # Left column - Data display
    card(
      full_screen = TRUE,
      card_header("Sales Records"),
      DTOutput("sales_table")
    ),
    
    # Right column - Input sidebar
    div(
      class = "sidebar-card",
      h4("Add New Sales", style = "color: #9C7B54; margin-bottom: 20px;"),
      
      # Added date input
      dateInput("sale_date", "üìÖ Sales Date", value = Sys.Date()),
      
      pickerInput(
        "category", 
        "üì¶ Product Category", 
        choices = names(categories),
        options = list(
          style = "btn-light",
          size = 10,
          animation = "animate__animated animate__fadeIn",
          liveSearch = TRUE
        )
      ),
      
      uiOutput("product_ui"),
      
      numericInput("quantity", "üî¢ Quantity", value = 1, min = 1),
      
      div(
        style = "display: flex; gap: 10px; margin-top: 20px;",
        actionButton("add_row", "‚ûï Add and Record Sales", class = "btn-primary")
      ),
      
      div(
        style = "display: flex; gap: 10px; margin-top: 20px;",
        actionButton("delete_row", "üóëÔ∏è Delete Row", class = "btn-primary"),
        actionButton("undo_btn", "‚Ü©Ô∏è Undo", class = "btn-primary"),
        actionButton("redo_btn", "‚Ü™Ô∏è Redo", class = "btn-primary")
      ),
      
      div(
        style = "display: flex; gap: 10px; margin-top: 20px;",
