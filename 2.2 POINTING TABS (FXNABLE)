                      div(class = "card",
                          div(class = "card-header", "Transaction Summary"),
                          div(class = "card-body",
                              fluidRow(
                                column(6,
                                       div(class = "stats-box",
                                           div(class = "stats-label", "Total Load Transactions"),
                                           textOutput("total_load_count"),
